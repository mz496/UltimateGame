<div class="container">

<div class="col-md-12 header">
  <div class="col-md-4 homepage-title">
    <h1>The Name Goes Here</h1>
  </div>

  <div class="col-md-8 search-bar">
    <%= form_tag "/get_game", method: :get do %>
      <div class="input-group">
        <% if params[:query].present? %>
          <div class="input-group-btn">
            <%= link_to "clear", "/", class: "btn btn-default" %>
          </div>
        <% end %>
        <%= text_field_tag :query, params[:query], class: "form-control typeahead", id: "game_search", autocomplete: "off" %>
        <div class="input-group-btn">
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row nav-bar">
  <div class="col-md-3"></div>
  <div class="col-md-2">Placeholder</div>
  <div class="col-md-2">Placeholder</div>
  <div class="col-md-2">Placeholder</div>
  <div class="col-md-3"></div>
</div>

<div class="row game-name">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h3><%= @game.name %></h3>
  </div>
  <div class="col-md-2"></div>
</div>

<div class="row vital-data">
<div class="col-md-2"></div>
<div class="col-md-8">

  <div class="img-container">
    <img class="gamepage-img" src="<%= @game.headerimg %>" />
  </div>

  <div class="info-container">
    <div class="center">
      <div class="col-md-4 score-container">
        <div class="circle">
        <span class="metascore"><%= @game.metascore %></span>
        </div>
      </div>
      <div class="col-md-4 score-container">
        <div class="circle">
        <span class="steam-pct">100</span>
        </div>
      </div>
      <div class="col-md-4 score-container">
        <div class="circle">
        <span class="recommendations"><%= @game.recommendations %></span>
        </div>
      </div>
    </div>

    asdf
  </div>
</div>

<div class="col-md-2"></div>
</div>

</div>


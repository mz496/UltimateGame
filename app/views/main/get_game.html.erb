<div class="row main-column pricing">
  <% if !@game.itad %>
    We couldn't find any deals on <a href="http://isthereanydeal.com">IsThereAnyDeal.</a>
  <% else %>
    <h4 class="section-heading">Price information</h4>

    <table>
      <tr>
        <td class="col-md-6">

          <div class="section-view">
            <span class="section-title">DLCs for this game</span>
            <div class="section-view-inner">
              <table class="table">
                <% @associated_names.select{|_,data| data[:is_dlc]}.sort_by{|name,_| name.gsub(/[^\w\d]/,"").downcase}.map do |name,data| %>
                  <tr><td class="game-entry
                  unselected
                  <%= name.gsub(/[^\w\d]/,"-").downcase %>"><%= name %></td></tr>
                <% end %>
              </table>
            </div>
          </div>

          <div class="section-view">
            <span class="section-title">Packages for this game</span>
            <div class="section-view-inner">
              <table class="table">
                <% @associated_names.select{|_,data| data[:is_pkg]}.sort_by{|name,_| name.gsub(/[^\w\d]/,"").downcase}.map do |name,data| %>
                  <tr><td class="game-entry
                  unselected
                  <%= name.gsub(/[^\w\d]/,"-").downcase %>"><%= name %></td></tr>
                <% end %>
              </table>
            </div>
          </div>

        </td>

        <td class="col-md-6 pricing-entry">
          <% @associated_names.each do |name,data| %>
            <div class="pricing-entry-inner
            unselected
            <%= name.gsub(/[^\w\d]/,"-").downcase %>
            <%= 'dlc' if data[:is_dlc] %>
            <%= 'unlisted' if !data[:is_dlc] && !data[:is_pkg] %>">
              <span class="pricing-title"><%= name %></span> <% if !name.eql?(@game.name) %>
              <a class="show-original">(Show original game)</a>
              <% end %>

              <table class="table">
                <% if name.eql?(@game.name) && @prices && @prices[@game.name] %>

                  <tr>
                    <th>Vendor</th>
                    <th>Price</th>
                    <th style="width:80px">Lowest recorded</th>
                  </tr>

                  <% @prices[@game.name].each do |entry| %>
                    <tr>
                      <td><a href="<%= entry[:store_url] %>"><%= entry[:store] %></a></td>
                      <td><%= entry[:current_price] %> (<%= entry[:price_cut]%>)</td>
                      <td><%= entry[:lowest_recorded] %></td>
                    </tr>
                  <% end %>

                <% end %>
                <!-- this is just the default display,
                else this data is appended to the appropriate element by jquery/ajax -->

              </table>
            </div>
          <% end %>

          <% @associated_names.each do |name,data| %>
            <% if data[:is_pkg] %>
              <div class="pricing-entry-pkg-contents
              unselected
              <%= name.gsub(/[^\w\d]/,"-").downcase %>">
                Contents:
                <ul>
                <% Package.find_by(name: name).apps.split(",").each do |item_id| %>
                  
                  <% if Game.find_by(steamid: item_id) && Game.find_by(steamid: item_id).name.eql?(@game.name) %>
                    <li><%= Game.find_by(steamid: item_id).name %></li>

                  <% elsif Dlc.find_by(steamid: item_id) && Dlc.find_by(steamid: item_id).name.eql?(@game.name) %>
                    <li><%= Dlc.find_by(steamid: item_id).name %></li>
                  
                  <% end %>
                <% end %>

                <% Package.find_by(name: name).apps.split(",").each do |item_id| %>
                  
                  <% if Game.find_by(steamid: item_id) && !Game.find_by(steamid: item_id).name.eql?(@game.name)%>
                    <li><%= Game.find_by(steamid: item_id).name %></li>
                  
                  <% elsif Dlc.find_by(steamid: item_id) && !Dlc.find_by(steamid: item_id).name.eql?(@game.name)%>
                    <li><%= Dlc.find_by(steamid: item_id).name %></li>
                  
                  <% end %>
                <% end %>
                </ul>
              </div>
            <% end %>
          <% end %>
        </td>
      </tr>
    </table>

    <a href="http://isthereanydeal.com/#/page:game/info?plain=<%= @game.itad %>">(View on IsThereAnyDeal)</a>
  <% end %>
</div>



